        <Grid.RowDefinitions>
            <RowDefinition Height="221*"/>
            <RowDefinition Height="259*"/>
        </Grid.RowDefinitions>
        <Canvas HorizontalAlignment="Left" Height="480" Name="canvas1" VerticalAlignment="Top" Width="640" Grid.RowSpan="2" Margin="-10,0,0,0">
